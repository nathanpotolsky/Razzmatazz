<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="github2b2b.razzmatazz.continueOrFinish">

    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="Add Another Item"
        android:id="@+id/button2"
        android:layout_above="@+id/button5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="Submit"
        android:id="@+id/button5"
        android:onClick="onClickSubmit"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"/>

    <ScrollView
        android:layout_width="410dp"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Item 1: Turkey, Chicken, Provologne, Mozerella, Oil and Vinegar, Sriracha, Lettuce, Tomato, Onion"
                android:id="@+id/textView2"
                android:paddingBottom="15dp"
                android:textSize="21dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Item 2: Turkey, Chicken, Provologne, Mozerella, Oil and Vinegar, Sriracha, Lettuce, Tomato, Onion"
                android:id="@+id/textView4"
                android:paddingBottom="15dp"
                android:textSize="21dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Item 3: Turkey, Chicken, Provologne, Mozerella, Oil and Vinegar, Sriracha, Lettuce, Tomato, Onion"
                android:id="@+id/textView5"
                android:paddingBottom="15dp"
                android:textSize="21dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Item 4: Turkey, Chicken, Provologne, Mozerella, Oil and Vinegar, Sriracha, Lettuce, Tomato, Onion"
                android:id="@+id/textView3"
                android:paddingBottom="15dp"
                android:textSize="21dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Item 5: Turkey, Chicken, Provologne, Mozerella, Oil and Vinegar, Sriracha, Lettuce, Tomato, Onion"
                android:id="@+id/textView6"
                android:paddingBottom="15dp"
                android:textSize="21dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Item 6: Turkey, Chicken, Provologne, Mozerella, Oil and Vinegar, Sriracha, Lettuce, Tomato, Onion"
                android:id="@+id/textView7"
                android:paddingBottom="15dp"
                android:textSize="21dp"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
